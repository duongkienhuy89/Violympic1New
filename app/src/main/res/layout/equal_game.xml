<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/rl_bg_equal"
       android:background="@drawable/bg_fores"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <GridView
           android:id="@+id/gv_equal"

           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/iv_false_equal"
           app:layout_constraintLeft_toLeftOf="parent"

           android:background="@drawable/border_equal"




           android:columnWidth="133dp"
          android:gravity="center"
           android:numColumns="5"
           android:stretchMode="columnWidth"
           android:verticalSpacing="3dp"
           android:horizontalSpacing="3dp"

           android:padding="10dp"

           android:layout_width="696dp"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/tv_score_equal"
           android:textColor="@android:color/white"
           android:textSize="25dp"
           android:textStyle="normal"
           android:text="@string/scrore"
           android:layout_marginBottom="3dp"
  app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <ImageView
           android:id="@+id/iv_false_equal"


           android:layout_marginBottom="3dp"

           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toLeftOf="@+id/tv_score_equal"
           app:layout_constraintBottom_toBottomOf="parent"

           android:src="@drawable/bamau"
           android:layout_width="100dp"
           android:layout_height="25dp"/>

       <TextView
           android:id="@+id/tv_time_ingame_equal"
           android:text="@string/scrore"
           android:textColor="@android:color/white"
           android:textSize="24dp"
           android:textStyle="normal"
           android:layout_marginRight="15dp"
           android:layout_marginBottom="3dp"

           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_firework_equal"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="17297-fireworks.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="false" />
</RelativeLayout>