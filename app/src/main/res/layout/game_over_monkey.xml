<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/start_monkey"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_logo_monkey_gameover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        android:src="@drawable/khithongminh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <TextView

        android:id="@+id/tv_score_monkey_gameover"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_3"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="@string/scrore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView

        android:id="@+id/iv_flase_monkey_gameover"

        android:layout_marginTop="10dp"
     app:layout_constraintTop_toTopOf="@+id/guideline_4"
        app:layout_constraintLeft_toLeftOf="@+id/guideline_3"
        android:layout_marginBottom="20dp"
        android:src="@drawable/bamau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_continue_monkey"
        android:onClick="onClickContinueGameOverMonkey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        android:layout_marginBottom="20dp"
        android:src="@drawable/play"

        android:layout_width="90dp"
        android:layout_height="90dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>