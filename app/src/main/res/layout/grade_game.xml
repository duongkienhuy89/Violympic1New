<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_fores"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_grade_0"
        android:visibility="gone"
        android:onClick="onClickOperator"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/mamnon1"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
       />

    <ImageView
        android:id="@+id/iv_grade_0_en"

        android:onClick="onClickOperator"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/mamnon_en1"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="87dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="63dp"
        app:lottie_fileName="dan_chim.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <ImageView
        android:id="@+id/iv_backgrade"
        android:onClick="onClickBackGrade"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/back"
        android:layout_width="60dp"
        android:layout_height="59dp"/>
    <com.airbnb.lottie.LottieAnimationView
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        android:layout_width="300dp"
        android:layout_height="200dp"
        app:lottie_fileName="23100-happy-bird.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <com.airbnb.lottie.LottieAnimationView
    android:layout_below="@+id/iv_backgrade"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_fileName="bee-fiying.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_sun_grade0"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_fileName="sun.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <com.airbnb.lottie.LottieAnimationView
android:layout_marginLeft="50dp"
        android:layout_width="150dp"
        android:layout_height="160dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:lottie_fileName="con_huou.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />


    <ImageView
        android:id="@+id/iv_grade_1"
        android:src="@drawable/lop1"


        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_grade_2"
        android:onClick="onClickGrade1"
        android:layout_width="123dp"
        android:layout_height="73dp"/>
    <ImageView
        android:id="@+id/iv_grade_2"
        android:src="@drawable/lop2"


        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/iv_grade_1"
        app:layout_constraintRight_toLeftOf="@+id/iv_grade_3"


        android:onClick="onClickGrade2"
        android:layout_width="123dp"
        android:layout_height="73dp"/>
    <ImageView
        android:id="@+id/iv_grade_3"

android:src="@drawable/lop3"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/iv_grade_2"
        app:layout_constraintRight_toLeftOf="@+id/iv_grade_4"

        android:onClick="onClickGrade3"

        android:layout_width="123dp"
        android:layout_height="73dp"/>
    <ImageView
        android:id="@+id/iv_grade_4"
        android:src="@drawable/lop4"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/iv_grade_3"
        app:layout_constraintRight_toLeftOf="@+id/iv_grade_5"
        android:onClick="onClickGrade4"
        android:layout_width="123dp"
        android:layout_height="73dp"/>
    <ImageView
        android:id="@+id/iv_grade_5"
        android:src="@drawable/lop5"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toRightOf="@id/iv_grade_4"
        app:layout_constraintRight_toRightOf="parent"

        android:onClick="onClickGrade5"
        android:layout_width="123dp"
        android:layout_height="73dp"/>
    <com.airbnb.lottie.LottieAnimationView

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="100dp"
        android:layout_width="230dp"
        android:layout_height="130dp"
        app:lottie_fileName="elephant_jumping.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

</androidx.constraintlayout.widget.ConstraintLayout>