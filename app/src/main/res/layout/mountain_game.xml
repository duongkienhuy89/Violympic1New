    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_time_ingame_moutain"
                android:text="@string/time"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="normal"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_false_moutain"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/tv_time_ingame_moutain"
                android:src="@drawable/bamau"
                android:layout_width="100dp"
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/tv_score_moutain"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="normal"
                android:text="@string/scrore"
                android:layout_marginLeft="5dp"
               android:layout_marginTop="30dp"
                android:layout_below="@+id/iv_false_moutain"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_monkey_moutain"
                android:src="@drawable/monkey_question"
               android:layout_alignParentBottom="true"
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="39dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_result_moutain"
                android:background="@drawable/tablemonkey"
              android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:textSize="30dp"
                android:text="0"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="188dp"
                android:layout_height="90dp"/>

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_question_moutain"
          android:layout_weight="4"

                android:background="@drawable/round_layout_moutain"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_question_moutain"
                    android:text="@string/app_name"
                    android:layout_marginLeft="52dp"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_report"
                    android:onClick="onClickReportQuestion"
android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="20dp"
                    android:text="Báo cáo"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bt_custon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_sumit_moutain"
                    android:onClick="onClickMoutainSumit"
                    android:src="@drawable/bt_sumit"
                    android:layout_marginBottom="10dp"
                   app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_continue_moutain"
                    android:visibility="gone"
                    android:onClick="onClickMoutainContinue"
                    android:src="@drawable/play"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:id="@+id/ll_number_moutain"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_sumit_moutain"

                    android:background="@drawable/bg_number_moutain"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bt_0"
                            android:onClick="onClickBt0"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt0"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bt_1"
                            android:onClick="onClickBt1"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bt_2"
                            android:onClick="onClickBt2"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bt_3"
                            android:onClick="onClickBt3"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bt_4"
                            android:onClick="onClickBt4"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt4"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bt_back"
                            android:onClick="onClickBtB"
                            android:layout_marginLeft="2dp"
                            android:background="@drawable/nodeback"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bt_5"
                            android:onClick="onClickBt5"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt5"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/bt_6"
                            android:onClick="onClickBt6"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bt6"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
