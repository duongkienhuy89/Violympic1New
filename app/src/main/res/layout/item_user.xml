<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_item"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_item_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="6dp"
            android:layout_width="69dp"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/iv_item_top"
                android:layout_marginLeft="5dp"
                android:layout_width="69dp"
                android:src="@drawable/btn_rank"
                android:layout_height="55dp"
                />
            <TextView
                android:id="@+id/tv_item_top"
                android:text="900"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="29dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rl_item_top"
            app:layout_constraintRight_toLeftOf="@+id/tv_item_level"
            app:layout_constraintHorizontal_bias="0.25"
            android:id="@+id/tv_item_name"
            android:text="@string/app_name"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17dp"

            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_item_tinh"
            app:layout_constraintLeft_toRightOf="@+id/rl_item_top"
            app:layout_constraintRight_toLeftOf="@+id/tv_item_huyen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Hung Yen"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="15dp"

            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_item_huyen"
            app:layout_constraintLeft_toRightOf="@+id/tv_item_tinh"
            app:layout_constraintRight_toLeftOf="@+id/tv_item_xa"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Khoai Chau"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="15dp"

            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_item_xa"
            app:layout_constraintLeft_toRightOf="@+id/tv_item_huyen"
            app:layout_constraintRight_toLeftOf="@+id/tv_item_school"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Viet Hoa"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="15dp"

            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_item_school"
            app:layout_constraintLeft_toRightOf="@+id/tv_item_xa"
            app:layout_constraintRight_toLeftOf="@+id/tv_item_level"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Le Quy Don"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="15dp"

            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_item_level"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="60dp"
            android:text="10"
            android:textStyle="bold|italic"
            android:textSize="17dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>